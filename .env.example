# 环境变量配置示例
# 复制此文件为 .env 并修改相应配置

# 服务端口配置
FRONTEND_PORT=3000
BACKEND_PORT=8000
WHISPER_PORT=8001
TRANSLATOR_PORT=8002

# API URLs
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Whisper 配置
MODEL_SIZE=small
DEVICE=cpu

# 翻译服务配置
CACHE_SIZE=1000

# CORS 配置
CORS_ORIGIN=http://localhost:3000

# 开发模式
NODE_ENV=development
